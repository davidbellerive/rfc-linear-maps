<div id="mapwrap-ttc1" style="overflow-x:auto; max-width:100%; padding:6px 0;">
  <img
    src="https://raw.githubusercontent.com/davidbellerive/rfc-linear-maps/main/TTC-line3-1985-2023.svg"
    alt="TTC Line 3 — Scarborough RT linear map"
    style="display:block; width:1100px; max-width:none; height:auto;"
    loading="lazy"
    decoding="async">
</div>

<div id="mapcontrols-ttc1"
     style="display:flex; gap:10px; margin:6px 0 14px 0;">
  <button type="button"
    style="padding:10px 14px;"
    onclick="document.getElementById('mapwrap-ttc1')
      .scrollBy({left:-320, behavior:'smooth'});">
    ◀
  </button>
  <button type="button"
    style="padding:10px 14px;"
    onclick="document.getElementById('mapwrap-ttc1')
      .scrollBy({left:320, behavior:'smooth'});">
    ▶
  </button>
</div>
<script>
(function(){
  var wrap = document.getElementById('mapwrap-ttc1');
  var controls = document.getElementById('mapcontrols-ttc1');

  if (!wrap || !controls) return;

  function updateControls(){
    // scrollWidth > clientWidth means horizontal scrolling is possible
    if (wrap.scrollWidth > wrap.clientWidth + 2) {
      controls.style.display = 'flex';
    } else {
      controls.style.display = 'none';
    }
  }

  // Run on load
  updateControls();

  // Run again if viewport changes (rotation / resize)
  window.addEventListener('resize', updateControls);
})();
</script>
